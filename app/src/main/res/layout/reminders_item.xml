<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lightblue1"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/profile_image"
                android:src="@drawable/ic_reminder_black_24dp"
                tools:ignore="VectorDrawableCompat" />
<LinearLayout
    android:id="@+id/titleli"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="90dp">
    <TextView
        android:id="@+id/titletv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

</LinearLayout>
            <LinearLayout
                android:id="@+id/doseli"
                android:layout_below="@+id/titleli"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp">

                <TextView
                    android:id="@+id/dosetv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosage:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:text="dose"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/timingli"
                android:layout_below="@+id/doseli"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp">

                <TextView
                    android:id="@+id/timingtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="timing"
                    android:layout_marginLeft="29dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/daysli"
                android:layout_below="@+id/timingli"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp">

            <TextView
                android:id="@+id/daystv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="days"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/durationli"
                android:layout_below="@+id/daysli"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp">
            <TextView
                android:id="@+id/durationtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="duration"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />

            </LinearLayout>



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>